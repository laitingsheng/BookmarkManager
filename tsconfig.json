{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "moduleResolution": "bundler",
    "module": "ES6",
    "esModuleInterop": true,
    "sourceMap": false,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "moduleResolution": "node",
      "module": "CommonJS"
    }
  }
}
